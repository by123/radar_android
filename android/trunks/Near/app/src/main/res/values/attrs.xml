<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="decoration" format="enum">
        <enum name="pink" value="1" />
        <enum name="red" value="2" />
    </attr>

    <attr name="shape" format="enum">
        <enum name="square" value="1" />
        <enum name="round" value="2" />
    </attr>

    <declare-styleable name="ProgressButton">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="isProcessing" format="boolean" />
        <attr name="decoration" />
        <attr name="shape" />
    </declare-styleable>
    <declare-styleable name="SearchBar">
        <attr name="hint" format="string" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="TextColor" format="color" />
        <attr name="TextSize" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="textIsDisplayable" format="boolean" />
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>


    <declare-styleable name="SpringIndicator">

        <!--tab text color -->
        <attr name="siTextColor" format="reference" />

        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference" />

        <!--tab item bg -->
        <attr name="siTextBg" format="reference" />

        <!--tab text size-->
        <attr name="siTextSize" format="dimension" />

        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference" />

        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference" />

        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension" />

        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension" />

    </declare-styleable>
    
    <declare-styleable name="RadarScanView">
        <attr name="radarColor" format="color"/>
        <attr name="radaWidth" format="dimension"/>
        <attr name="radarHeight" format="dimension"/>
    </declare-styleable>
    <!--加载中、加载失败、无数据、请求成功，通用控件自定义属性-->
    <declare-styleable name="MultiStateView">
        <attr name="loadingView" format="reference"/>
        <attr name="emptyView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="networkErrorView" format="reference"/>
        <attr name="viewState" format="enum">
            <enum name="content" value="0"/>
            <enum name="error" value="1"/>
            <enum name="networkError" value="2"/>
            <enum name="empty" value="3"/>
            <enum name="loading" value="4"/>
        </attr>
    </declare-styleable>
    <!--自定义圆角图片控件-->
    <declare-styleable name="CornerImageView">
        <attr name="leftTopRadius" format="dimension"/>
        <attr name="rightTopRadius" format="dimension"/>
        <attr name="leftBottomRadius" format="dimension"/>
        <attr name="rightBottomRadius" format="dimension"/>
    </declare-styleable>
    <!--下拉头部放大scrollview-->
    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>
    <!--通用头部actionbar属性-->
    <declare-styleable name="ActionBar">
        <attr name="headType" format="integer"/>
    </declare-styleable>
    <!--pickview属性-->
    <declare-styleable name="wheelview">
        <attr name="gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="textColorOut" format="color"/>
        <attr name="textColorCenter" format="color"/>
        <attr name="dividerColor" format="color"/>
    </declare-styleable>
    <!--ObserverScrollView-->
    <declare-styleable name="ScrollView">
        <attr name="headerHeight" format="dimension"></attr>
    </declare-styleable>
</resources>

