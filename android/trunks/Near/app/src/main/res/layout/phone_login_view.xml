    <com.dd.CircularProgressButton
        android:layout_gravity="center_horizontal"
        android:id="@+id/cpbLogin"
        style="@style/LoginBtnStyleI18N"
        android:layout_below="@id/etLoginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="@color/near_main_orange_color"
        android:textColor="@color/white"
        android:textSize="17sp"
        near:cpb_colorIndicator="@color/near_main_orange_color"
        near:cpb_colorIndicatorBackground="#00000000"
        near:cpb_colorProgress="#00000000"
        near:cpb_cornerRadius="50dp"
        near:cpb_selectorIdle="@drawable/idle_state_selector"
        near:cpb_textIdle="@string/login_title_text"
        />

