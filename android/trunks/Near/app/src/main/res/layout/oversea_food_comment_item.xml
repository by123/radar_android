<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/text_size_15_dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/ivFoodCommentIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_msg_default"

                />

            <ImageView
                android:id="@+id/ivFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_details_yelp_normal"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rlFoodCommentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/ivFoodCommentIcon"
                >

                <TextView
                    android:id="@+id/tvFoodCommentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Herman"
                    android:textColor="@color/sixtyfive_percent_black"
                    android:textSize="@dimen/text_size_15_sp"
                    />

                <TextView
                    android:id="@+id/tvFoodCommentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="10:16"
                    android:textColor="@color/fourty_percent_black"
                    android:textSize="@dimen/text_size_11_sp"
                    />
            </RelativeLayout>

            <com.brotherhood.o2o.ui.widget.YelpRatingView
                android:id="@+id/yelpRatingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tvFoodCommentContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlFoodCommentTitle"
                android:layout_marginBottom="@dimen/text_size_15_dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/ivFoodCommentIcon"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Comment contents"
                android:textColor="@color/eighty_percent_black"
                android:textSize="@dimen/text_size_17_sp"
                />

            <ImageView
                android:id="@+id/ivFoodCommentImage"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@id/tvFoodCommentContent"
                android:layout_marginBottom="@dimen/text_size_15_dp"
                android:layout_toRightOf="@id/ivFoodCommentIcon"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_default"
                android:visibility="gone"
                />

            <View
                android:id="@+id/viFoodCommentDivide"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/tvFoodCommentContent"
                android:layout_toRightOf="@id/ivFoodCommentIcon"
                android:background="@color/common_divide_color"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFoodCommentMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFoodCommentContent"
        android:background="@drawable/common_view_btn_bg"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_divide_color"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_details_expand_normal"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/my_activities_bg"
            />
    </LinearLayout>
</LinearLayout>