<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:actionbar="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.brotherhood.o2o.ui.widget.ActionBar
        android:id="@id/abLeftBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        actionbar:headType="1"
        >
    </com.brotherhood.o2o.ui.widget.ActionBar>

    <com.brotherhood.o2o.lib.multiStateView.MultiStateView
        android:id="@id/stateView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/empty_view"
        app:errorView="@layout/error_view"
        app:loadingView="@layout/loading_view"
        app:viewState="loading"/>
</LinearLayout>