<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_login_imgfuzzy_normal"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/llRegist"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="86dp"
        android:background="@drawable/create_et_bg_top"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etRegistEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:hint="@string/email"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/fifty_percent_white"
                android:textSize="17sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ten_percent_white"/>


            <EditText
                android:id="@+id/etRegistPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:textSize="17sp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/fifty_percent_white"
                android:hint="@string/password"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ten_percent_white"/>

            <EditText
                android:id="@+id/etRegistUsername"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="17sp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="@color/fifty_percent_white"
                android:hint="Username"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ten_percent_white"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@null"
                android:gravity="center_vertical"
                >
                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_15_dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/person_male_checkbox_bg"
                    android:text="Male"
                    android:button="@null"
                    android:textSize="17sp"
                    android:textColor="@color/fifty_percent_white"
                    android:background="@null"
                    />
                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginLeft="27dp"
                    android:button="@null"
                    android:drawableRight="@drawable/person_female_checkbox_bg"
                    android:drawablePadding="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/fifty_percent_white"
                    android:background="@null"
                    />
            </RadioGroup>


        </LinearLayout>

        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/ten_percent_white"/>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <!--<ImageView
                android:id="@+id/ivUserSetIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:layout_toLeftOf="@id/ivUserSetArrowIcon"
                android:duplicateParentState="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_msg_default"
                />-->

            <ImageView
                android:id="@+id/ivAddPhoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_login_photo_normal"/>

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Add Photo"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCreateCompleted"
        android:layout_below="@id/llRegist"
        style="@style/LoginBtnStyleI18N"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/phone_login_btn_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:duplicateParentState="true"
            android:text="@string/complete"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            />
    </LinearLayout>

