<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

    <View
            android:id="@id/abAlpha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_titlebar_height"
            android:background="@color/transparent"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_titlebar_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

        <ImageView
                android:id="@id/abBack"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawablePadding="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/common_view_btn_bg"
                android:src="@mipmap/back_image_black"
                android:scaleType="centerInside"
                />
        <View
            android:id="@id/abDivide"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:alpha="0.3"
            android:background="@color/black"/>

        <TextView
            android:id="@id/abTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:maxEms="9"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
            android:id="@id/abRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_titlebar_height"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            />
    <View
        android:id="@id/abHorizontalDivide"
        android:layout_below="@id/abAlpha"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divide_color"
        />
</RelativeLayout>