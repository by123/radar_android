<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_frame_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="center"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/layout_indicator"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_centerInParent="true">

        <com.brotherhood.o2o.chat.ui.view.WaveCycleView
            android:id="@+id/view_wave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/chat_voice_frame_indicator"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@mipmap/ic_chat_voice_process" />

    </RelativeLayout>

    <TextView
        android:id="@+id/chat_voice_frame_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_chat_voice_text_bg"
        android:gravity="center_horizontal"
        android:text="@string/tips_move_up_to_cancel_voice"
        android:textColor="@android:color/white"
        android:textSize="16dp" />
</RelativeLayout>