<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/llOtherDetailBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/eighty_percent_black"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/llOtherDetailLike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_view_btn_bg"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ivOtherDetailLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/like"
                />

            <TextView
                android:id="@+id/tvOtherDetailLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/other_detail_like"
                android:textColor="@color/white"
                android:textSize="11sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOtherDetailChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_view_btn_bg"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/other_detail_chat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/other_detail_chat"
                android:textColor="@color/white"
                android:textSize="11sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOtherDetailAddFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_view_btn_bg"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_friend"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/other_detail_addfriend"
                android:textColor="@color/white"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llOtherDetailBottom"
        android:background="@color/my_activities_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/my_activities_bg"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rlOtherDetailHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/user_detail_head_bg"
                android:paddingBottom="10dp"
                >

                <ImageView
                    android:id="@+id/ivOtherDetailIcon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_msg_default"
                    />
                <!--该宽高，包含了边框2.5dp * 2-->
                <TextView
                    android:id="@+id/tvOtherDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivOtherDetailIcon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="6dp"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/tvOtherDetailSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOtherDetailName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:alpha="0.8"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="14sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOtherDetailSignature"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tvOtherDetailAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:drawableLeft="@mipmap/sex_female_white"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/tvOtherDetailDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:alpha="0.6"
                        android:background="@drawable/user_detail_head_radius_bg"
                        android:drawableLeft="@mipmap/user_detail_location"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <ViewStub
                android:id="@+id/vsOtherDetailLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/user_detail_location_star_view"
                />

            <ViewStub
                android:id="@+id/vsOtherCollectFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/other_collect_food_view"
                />
            <LinearLayout
                android:id="@+id/llOtherNoCollect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:drawableTop="@mipmap/other_user_no_collect"
                    android:text="@string/other_user_no_collection"
                    android:textColor="@color/fifty_percent_black"
                    android:textSize="@dimen/text_size_15_sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
