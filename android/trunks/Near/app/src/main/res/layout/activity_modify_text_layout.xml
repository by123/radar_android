<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divide_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/my_activities_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"

        >
        <EditText
            android:id="@+id/etModifyText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="58dp"
            android:paddingLeft="23dp"
            android:paddingRight="13dp"
            android:textColor="@color/eighty_percent_black"
            android:textSize="17sp"
            android:background="@null"
            />
        <ImageView
            android:id="@+id/ivModifyClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="13dp"
            android:src="@mipmap/edit_text_clear"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_activities_bg"/>
</LinearLayout>
