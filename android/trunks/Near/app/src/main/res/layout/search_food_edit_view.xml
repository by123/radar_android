<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/near_slide_menu_color"
                android:alpha="0.75"
                android:orientation="vertical"
    >

    <View
        android:id="@id/abAlpha"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:background="@color/transparent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@id/abBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/common_view_btn_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/back_image_white"
            />

        <View
            android:id="@id/abDivide"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:alpha="0.3"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/near_by_search_title"/>

                <EditText
                    android:id="@+id/etSearchFood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:hint="@string/near_by_search_hint"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/fifty_percent_white"
                    android:textSize="15sp"
                    />

                <ImageButton
                    android:id="@+id/ibFoodEmptyKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:background="@null"
                    android:src="@mipmap/btn_msg_cutout_normal"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fifty_percent_white"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnSearchFood"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_view_btn_bg"
            android:text="@string/near_by_search_text"
            android:textColor="@color/fifty_percent_white"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>