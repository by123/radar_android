<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <View
        android:id="@id/abAlpha"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:background="@color/transparent"
        />
    <ImageView
        android:id="@id/abBack"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_titlebar_height"
        android:src="@mipmap/back_image_white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/common_view_btn_bg"
        />
    <TextView
        android:id="@id/abTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:id="@id/abRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_marginRight="10dp"

        />
    <View
        android:id="@id/abHorizontalDivide"
        android:layout_below="@id/abAlpha"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divide_color"
        />
</RelativeLayout>