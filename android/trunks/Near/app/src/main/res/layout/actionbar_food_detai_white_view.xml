<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/viFoodDetailTitleBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:background="@mipmap/food_detail_title_bg"
        />
    <View
        android:id="@id/abAlpha"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:background="@color/white"
        android:alpha="0"
        />

    <LinearLayout
        android:id="@+id/llFoodDetailTitleBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@id/abBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawablePadding="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/common_view_btn_bg"
            android:src="@mipmap/back_image_white"
            />
        <View
            android:id="@id/abDivide"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:alpha="0.3"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/abRight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        >

        <TextView
            android:visibility="gone"
            android:id="@+id/abFoodDetailReserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oversea_food_detail_reserve"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_details_reserve_white"
            android:textSize="12sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_view_btn_bg"
            />

        <TextView
            android:id="@+id/abFoodDetailCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_detail_call"
            android:gravity="center"
            android:drawableTop="@mipmap/food_detail_call_white"
            android:textSize="12sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_view_btn_bg"
            />
        <TextView
            android:id="@+id/abFoodDetailVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/food_detail_visit"
            android:drawableTop="@mipmap/food_detail_visit_white"
            android:textSize="12sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_view_btn_bg"
            />
        <TextView
            android:id="@+id/abFoodDetailCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/food_detail_collect"
            android:drawableTop="@mipmap/food_detail_collect_white"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:background="@drawable/common_view_btn_bg"
            />
    </LinearLayout>
    <View
        android:id="@+id/viHeadBottomLine"
        android:layout_below="@id/abRight"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0"
        android:background="@color/common_divide_color"/>
</RelativeLayout>