<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
    >

    <View
        android:id="@id/abAlpha"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:background="@color/transparent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_titlebar_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@id/abBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/common_view_btn_bg"
            android:drawablePadding="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/back_image_black"
            />

        <View
            android:id="@id/abDivide"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:alpha="0.3"
            android:background="@color/black"/>

        <LinearLayout
            android:id="@+id/lySearch"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_msg_search_line_normal"/>

                <EditText
                    android:imeOptions="actionSearch"
                    android:id="@+id/etAddFriend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="@string/put_friend_name_hint"
                    android:singleLine="true"
                    android:textColor="#cc000000"
                    android:textColorHint="#7f000000"
                    android:textSize="14sp"
                    />

                <ImageButton
                    android:id="@+id/ibEmptyKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:background="@null"
                    android:src="@mipmap/btn_msg_cutout_normal"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                android:background="#ff7451"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/common_view_btn_bg"
            android:text="@string/search"
            android:textColor="#ff7451"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:id="@id/abHorizontalDivide"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/abAlpha"
        android:background="@color/common_divide_color"
        />

</RelativeLayout>