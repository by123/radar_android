<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:corner="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ryAvatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true">

            <com.brotherhood.o2o.ui.widget.CornerImageView
                android:id="@+id/ivFoodDetailSmallIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_default"
                corner:leftBottomRadius="2.5dp"
                corner:leftTopRadius="2.5dp"
                corner:rightBottomRadius="2.5dp"
                corner:rightTopRadius="2.5dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/foot_detail_image_radius_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_details_image_normal"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvPhotoCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="9sp"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/ryAvatar"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvFoodDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/eighty_percent_black"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <com.brotherhood.o2o.ui.widget.nearby.FoodPriceLevelView
                android:id="@+id/foodDetailPriceLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="112dp"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:id="@+id/llFoodDetailInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvFoodDetailType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:textColor="@color/fifty_percent_black"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/tvFoodDetailDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/fifty_percent_black"
                    android:textSize="12dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFoursquare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_radius_edge_bg"
                    android:padding="1px"
                    android:src="@mipmap/foursquare_food_logo"
                    />

                <com.brotherhood.o2o.ui.widget.nearby.FoodScoreView
                    android:id="@+id/fsFoodDetailScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/food_score_darkgreen_bg"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/tvFoodDetailVotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/fifty_percent_black"
                    android:textSize="12dp"
                    />
            </LinearLayout>

            <com.brotherhood.o2o.ui.widget.YelpRatingView
                android:id="@+id/yelpRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
