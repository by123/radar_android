<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/five_percent_black_color"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlAboutUs"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="177dp">

        <ImageView
            android:id="@+id/ivAboutNearLogo"
            android:layout_width="95dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="65dp"
            android:src="@mipmap/ic_about_nearlogo_normal"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_below="@id/ivAboutNearLogo"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:text="版本V1.0"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tvServiceAgreement"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:textSize="17sp"
        android:textColor="@color/eighty_percent_black"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@color/white"
        android:text="@string/service_agreement"
        android:drawableRight="@mipmap/ic_more"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
