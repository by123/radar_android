<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent">
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/common_radius_view_click_bg"
        >
        <TextView
            android:id="@+id/tvDialogPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/eighty_percent_black"
            android:textSize="@dimen/text_size_18_sp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="@dimen/text_size_15_dp"
            android:text="0102425"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_divide_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvDialogCallPhone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/eighty_percent_black"
                android:text="@string/call_phone"
                android:gravity="center"
                android:textSize="@dimen/text_size_14_sp"
                android:background="@drawable/common_view_btn_bg"
                />
            <View
                android:layout_width="1px"
                android:layout_height="40dp"
                android:background="@color/common_divide_color"
                />
            <TextView
                android:id="@+id/tvDialogCancelCall"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/common_view_btn_bg"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel_call"
                android:textSize="@dimen/text_size_14_sp"
                android:textColor="@color/eighty_percent_black"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>