<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawee="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_titlebar_height"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <com.brotherhood.o2o.ui.widget.radar.ScrollableImageView
        android:id="@+id/img_scrollable"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="@dimen/common_titlebar_height" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_titlebar_height"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/ivRadarHeadLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:background="@drawable/common_view_btn_bg"
            android:src="@mipmap/radar_menu_change_btn"
            android:scaleType="center"
            />

        <ImageView
            android:id="@+id/ivRadarHeadLeftTip"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:background="@drawable/radar_round_red_point_bg"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_titlebar_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRadarHeadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:text="正在获取位置..."
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/ivRadarHeadArrow"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:src="@mipmap/radar_head_arrow_down" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_titlebar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/ivRadarHeadRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:background="@drawable/common_view_btn_bg"
            android:src="@mipmap/radar_chat_change_btn" />

        <ImageView
            android:id="@+id/ivRadarHeadRightTip"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/radar_round_red_point_bg"
            android:visibility="gone"
            />
    </FrameLayout>
</RelativeLayout>

