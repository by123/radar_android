<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:corner="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="10dp"
        android:background="@drawable/my_activity_item_radius_bg"
        >
        <com.brotherhood.o2o.ui.widget.CornerImageView
            android:id="@+id/ivMyEventItemIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="13dp"
            corner:leftTopRadius="5dp"
            corner:rightTopRadius="5dp"
            corner:leftBottomRadius="5dp"
            corner:rightBottomRadius="5dp"
            />
        <!--<ImageView
            android:id="@+id/ivMyEventItemIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="13dp"
            />-->
        <TextView
            android:id="@+id/tvMyEventItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivMyEventItemIcon"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="深圳"
            />

        <TextView
            android:id="@+id/tvMyEventItemSupplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivMyEventItemIcon"
            android:layout_below="@id/tvMyEventItemTitle"
            android:singleLine="true"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="举办者"
            />

        <TextView
            android:id="@+id/tvMyEventItemLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivMyEventItemIcon"
            android:layout_below="@id/tvMyEventItemSupplier"
            android:singleLine="true"
            android:textSize="13sp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:text="活动地"
            />

        <TextView
            android:id="@+id/tvMyEventItemTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivMyEventItemIcon"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:text="时间"
            />
    </RelativeLayout>
</RelativeLayout>