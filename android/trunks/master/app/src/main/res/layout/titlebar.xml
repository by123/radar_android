<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawee="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <com.brotherhood.o2o.test.blur.ScrollableImageView
        android:id="@+id/img_scrollable"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="@dimen/titlebar_height" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/selector_navigation_left" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_left_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            drawee:backgroundImage="@color/main_red"
            drawee:roundAsCircle="true" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:text="正在获取位置..."
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_arrow_down" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/selector_navigation_right" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_right_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="6dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            drawee:backgroundImage="@color/main_red"
            drawee:roundAsCircle="true" />
    </FrameLayout>
</RelativeLayout>

