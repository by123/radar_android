<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:padding="15dp"
            android:src="@drawable/selector_arrow_left" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/abc_action_bar_default_height_material"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/layout_reward"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实物"
                        android:textColor="@color/text_red"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/line_reward"
                        android:layout_width="43dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/text_red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:id="@+id/layout_coupon"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textColor="@color/text_gray"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/line_coupon"
                        android:layout_width="43dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/text_red"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/divide" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_surprise"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>