<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:drawee="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cell_user"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="@drawable/sel_cell_white_bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d0d0d0" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            drawee:roundAsCircle="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@id/image_avatar"
            android:orientation="vertical">
            <!--android:text="未登录"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/layout_name"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/no_login"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <include
                    layout="@layout/sexview_male"
                    android:layout_width="32dp"
                    android:layout_height="16dp"
                    android:layout_alignBottom="@+id/txt_name"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/txt_name" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_name"
                android:layout_marginTop="8dp"
                android:alpha="0.5"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:visibility="invisible" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cell_surprise"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/sel_cell_white_bg">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_menu_superise" />

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@android:id/icon"
            android:text="我的惊喜"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@android:id/text1"
            android:layout_alignParentBottom="true"
            android:background="#d0d0d0" />

        <TextView
            android:id="@+id/txt_surprise_count"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_point_red_bg"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:text="26"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cell_message"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/sel_cell_white_bg">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_menu_system" />

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@android:id/icon"
            android:text="系统消息"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@android:id/text1"
            android:layout_alignParentBottom="true"
            android:background="#d0d0d0" />

        <TextView
            android:id="@+id/txt_systemmsg_count"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_point_red_bg"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:text="26"
            android:textColor="@color/white" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/cell_feedback"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/sel_cell_white_bg">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_menu_advice" />

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@android:id/icon"
            android:text="意见反馈"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@android:id/text1"
            android:layout_alignParentBottom="true"
            android:background="#d0d0d0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cell_about"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/sel_cell_white_bg">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_menu_about" />

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@android:id/icon"
            android:text="关于我们"
            android:textColor="@android:color/black" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_point_about"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignTop="@android:id/text1"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@android:id/text1"
            android:visibility="gone"
            drawee:backgroundImage="@color/main_red"
            drawee:roundAsCircle="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@android:id/text1"
            android:layout_alignParentBottom="true"
            android:background="#d0d0d0" />
    </RelativeLayout>

</LinearLayout>