<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/sel_cell_white_bg"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/address_ic_location" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@android:id/icon"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@android:id/icon"
        android:layout_marginTop="-2dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="16sp"
        tools:text="柯兴科学院" />

    <TextView
        android:id="@+id/label_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_name"
        android:layout_below="@id/txt_name"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textColor="#7f7f7f"
        android:textSize="14sp"
        tools:text="科苑路15号" />
</RelativeLayout><!-- From: file:/D:/near_source_code/android/trunks/master/app/src/main/res/layout/address_cell_address.xml -->