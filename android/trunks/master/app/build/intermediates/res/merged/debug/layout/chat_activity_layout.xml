<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/CustomToolBar">

        <TextView
            style="@style/CustomToolbarTitleView"
            android:id="@+id/txt_toolbar"
             />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/chat_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/chat_frame_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <com.brotherhood.o2o.chat.ui.InterceptLayout
                android:id="@+id/chat_msgs_parent"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@color/chat_ui_background"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/chat_fetch_more_pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/chat_listview"
                    android:layout_width="match_parent"
                    android:background="#f7f7f7"
                    android:layout_height="match_parent" />
            </com.brotherhood.o2o.chat.ui.InterceptLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/chat_line" />

            <LinearLayout
                android:id="@+id/chat_toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chat_toolbar_left"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:contentDescription="@null"
                    android:src="@drawable/selector_chat_text_btn" />

                <TextView
                    android:id="@+id/chat_toolbar_volatile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/chat_bomb_selector"
                    android:gravity="center"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/chat_toolbar_middle_frame"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/chat_toolbar_voice"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@drawable/chat_voice_button"
                        android:gravity="center"
                        android:text="@string/tips_press_to_speak"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <com.brotherhood.o2o.chat.ui.ChatEditText
                        android:id="@+id/chat_toolbar_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:imeOptions="actionSend"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:layout_centerVertical="true"
                        android:paddingEnd="48dp"
                        android:background="@drawable/shape_chat_edit_bg"
                        android:paddingRight="48dp"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/chat_toolbar_emotion"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/selector_chat_expression_btn" />

                    <View
                        android:id="@+id/chat_toolbar_focus_controller"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/chat_toolbar_focus_controller_selector"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/chat_toolbar_right"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:contentDescription="@null"
                    android:src="@drawable/selector_chat_add_btn" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/chat_footer"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:visibility="gone">

                <View
                    android:id="@+id/chat_toolbar_and_feature_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/chat_line" />

                <LinearLayout
                    android:id="@+id/chat_features_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/chat_toolbar_and_feature_line"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/chat_features_line1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/chat_choose_photo"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/chat_feature_mask_selector"
                                android:contentDescription="@null"
                                android:scaleType="centerInside"
                                android:src="@drawable/chat_feature_pic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/chat_feature_image"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/chat_choose_camera_photo"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/chat_feature_mask_selector"
                                android:contentDescription="@null"
                                android:scaleType="centerInside"
                                android:src="@drawable/chat_feature_camera_photo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/chat_feature_camera_photo"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_emotions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/chat_toolbar_and_feature_line"
                    android:orientation="vertical">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/chat_emotions_pager"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.0" />

                    <LinearLayout
                        android:id="@+id/chat_emotions_pager_index_panel"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </LinearLayout>

                <ViewStub
                    android:id="@+id/chat_stub_volatile_control_panel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/chat_toolbar_and_feature_line"
                    android:layout="@layout/chat_layout_volatile_controller" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/chat_frame_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="160dp"
                android:id="@+id/layout_indicator"
                android:layout_centerInParent="true"
                android:layout_height="160dp"
               >

                <ImageView
                    android:id="@+id/chat_voice_frame_indicator"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/ic_chat_voice_process"
                    android:contentDescription="@null" />

            </RelativeLayout>
            <TextView
                android:id="@+id/chat_voice_frame_text"
                android:layout_width="200dp"
                android:layout_below="@+id/layout_indicator"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_chat_voice_text_bg"
                android:text="@string/tips_move_up_to_cancel_voice"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/near_source_code/android/trunks/master/app/src/main/res/layout/chat_activity_layout.xml -->